
public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		genRSAKeys();
	}
	public static void genRSAKeys() {
		int p=MathTools.generatePrime(1000);
		int q=MathTools.generatePrime(1000);
		System.out.println(p+" "+q);
		int n= p*q;
		int phi=(p-1)*(q-1);
		int e=MathTools.genE(phi,1000);
		int d = MathTools.genPrivateKey(e, phi);
		//n,e public key
		//n,d private key

		System.out.println("E:"+e);
		System.out.println("D:"+d);
		System.out.println("Phi:"+phi);
		encryptText("Hola que tal", e, n, 256);
	}
	public static long encryptText(String message,int e,int n,int multiplier) {
		long value=0;
		for(int i=0;i<message.length();i++) {
			int ascii=(int)message.charAt(i);
			value+=(message.length()-1-i)*ascii;
		}
		long s=MathTools.encrypt(value, e, n);
		System.out.println("Ascii sequence: "+value);
		System.out.println("Encrypted sequence: "+s);
		return s;
	}
	public static long decryptText(String message,int d,int n,int multiplier) {
		long value=0;
		long s=MathTools.encrypt(value, e, n);
		for(int i=0;i<message.length();i++) {
			int ascii=(int)message.charAt(i);
			value+=(message.length()-1-i)*ascii;
		}
		
		System.out.println("Ascii sequence: "+value);
		System.out.println("Encrypted sequence: "+s);
		return s;
	}
	
}
